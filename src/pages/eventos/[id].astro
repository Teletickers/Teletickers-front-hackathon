---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/ui/Sidebar";
import Header from "../../components/ui/Header";
import Footer from "../../components/ui/Footer";
import type { Evento } from "../../types";

export const prerender = false;
---

<Layout title="Detalle del Evento - Ticky">
  <Sidebar client:load />
  <div
    class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300"
  >
    <Header client:load />
    <div id="evento-detail" class="container mx-auto px-4 py-8"></div>
    <Footer client:load />
  </div>
</Layout>

<script>
  import { client } from "../../lib/apollo-client";
  import { GET_EVENTO } from "../../lib/graphql/queries";
  import type { Evento } from "../../types";

  interface EventoData {
    evento: Evento;
  }

  const pathParts = window.location.pathname.split("/");
  const eventoId = pathParts[pathParts.length - 1];

  // Funci贸n para agregar/quitar de favoritos (usando localStorage por ahora)
  function toggleFavorite(eventoId: string) {
    const favorites = JSON.parse(localStorage.getItem("favorites") || "[]");
    const index = favorites.indexOf(eventoId);

    if (index > -1) {
      favorites.splice(index, 1);
      alert("Eliminado de favoritos");
    } else {
      favorites.push(eventoId);
      alert("Agregado a favoritos");
    }

    localStorage.setItem("favorites", JSON.stringify(favorites));
    loadEvento(); // Recargar para actualizar el bot贸n
  }

  function isFavorite(eventoId: string): boolean {
    const favorites = JSON.parse(localStorage.getItem("favorites") || "[]");
    return favorites.includes(eventoId);
  }

  async function loadEvento() {
    const detailContainer = document.getElementById("evento-detail")!;

    // Loading state
    detailContainer.innerHTML = `
      <div class="text-center py-12">
        <div class="inline-block h-12 w-12 animate-spin rounded-full border-4 border-solid border-blue-600 dark:border-blue-400 border-r-transparent"></div>
        <p class="mt-4 text-gray-700 dark:text-gray-300">Cargando evento...</p>
      </div>
    `;

    try {
      const { data } = await client.query<EventoData>({
        query: GET_EVENTO,
        variables: { id: eventoId },
      });

      if (!data || !data.evento) {
        detailContainer.innerHTML = `
          <div class="text-center py-16 bg-gray-50 dark:bg-gray-800 rounded-2xl">
            <svg class="w-24 h-24 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Evento no encontrado</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6">El evento que buscas no existe o ha sido eliminado</p>
            <a href="/" class="inline-flex items-center gap-2 bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors font-semibold">
              Volver al inicio
            </a>
          </div>
        `;
        return;
      }

      const evento = data.evento;
      const isFav = isFavorite(eventoId);

      detailContainer.innerHTML = `
        <div class="max-w-7xl mx-auto">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm mb-6">
            <a href="/" class="text-blue-600 dark:text-blue-400 hover:underline">Inicio</a>
            <span class="text-gray-400 dark:text-gray-600">/</span>
            <a href="/buscar?categoria=${evento.categoria}" class="text-blue-600 dark:text-blue-400 hover:underline">${evento.categoria}</a>
            <span class="text-gray-400 dark:text-gray-600">/</span>
            <span class="text-gray-600 dark:text-gray-400">${evento.titulo}</span>
          </nav>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Columna principal -->
            <div class="lg:col-span-2">
              <!-- Imagen principal -->
              ${
                evento.miniatura
                  ? `
                <div class="relative rounded-2xl overflow-hidden mb-6 group">
                  <img src="${evento.miniatura}" alt="${evento.titulo}" class="w-full h-96 object-cover">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                  <button 
                    onclick="window.toggleFavorite('${eventoId}')"
                    class="absolute top-4 right-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm p-3 rounded-full shadow-lg hover:scale-110 transition-transform"
                  >
                    <svg class="w-6 h-6 ${isFav ? "text-red-500 fill-current" : "text-gray-600 dark:text-gray-400"}" fill="${isFav ? "currentColor" : "none"}" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  </button>
                </div>
              `
                  : ""
              }

              <!-- T铆tulo y categor铆a -->
              <div class="mb-6">
                <div class="flex items-center gap-3 mb-3">
                  <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-semibold">
                    ${evento.categoria}
                  </span>
                  <span class="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm font-semibold">
                    ${evento.estado}
                  </span>
                </div>
                <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-3">${evento.titulo}</h1>
                <p class="text-lg text-gray-600 dark:text-gray-300">${evento.descripcion || "Sin descripci贸n disponible"}</p>
              </div>

              <!-- Informaci贸n del evento -->
              <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-6 mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Informaci贸n del evento</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Fecha</p>
                      <p class="font-semibold text-gray-900 dark:text-white">${new Date(evento.fecha).toLocaleDateString("es-ES", { weekday: "long", year: "numeric", month: "long", day: "numeric" })}</p>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Hora</p>
                      <p class="font-semibold text-gray-900 dark:text-white">${evento.hora}</p>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Ubicaci贸n</p>
                      <p class="font-semibold text-gray-900 dark:text-white">${evento.distrito}, ${evento.provincia}</p>
                      <p class="text-sm text-gray-500 dark:text-gray-400">${evento.region}</p>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Aforo</p>
                      <p class="font-semibold text-gray-900 dark:text-white">${evento.aforo} personas</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Mapa de ubicaci贸n -->
              <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-6 mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Ubicaci贸n</h2>
                <div class="bg-gray-200 dark:bg-gray-700 rounded-xl h-64 flex items-center justify-center">
                  <div class="text-center">
                    <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                    </svg>
                    <p class="text-gray-600 dark:text-gray-400 font-medium">${evento.distrito}, ${evento.provincia}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-500">${evento.region}</p>
                  </div>
                </div>
              </div>

              <!-- Plano de asientos -->
              <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Plano de asientos</h2>
                <div class="space-y-4">
                  <!-- Escenario -->
                  <div class="bg-gradient-to-b from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-700 rounded-lg py-4 text-center">
                    <p class="text-gray-800 dark:text-gray-200 font-bold"> ESCENARIO</p>
                  </div>
                  
                  <!-- Zonas de asientos -->
                  <div class="grid grid-cols-3 gap-4">
                    <!-- Zona VIP -->
                    <div class="bg-purple-100 dark:bg-purple-900/30 border-2 border-purple-300 dark:border-purple-700 rounded-lg p-4 hover:shadow-lg transition-shadow cursor-pointer">
                      <div class="flex items-center justify-between mb-2">
                        <span class="font-bold text-purple-800 dark:text-purple-300">VIP</span>
                        <span class="text-xs text-purple-600 dark:text-purple-400">50 asientos</span>
                      </div>
                      <div class="grid grid-cols-5 gap-1 mb-2">
                        ${Array(15)
                          .fill(0)
                          .map(
                            () =>
                              '<div class="w-4 h-4 bg-purple-500 dark:bg-purple-600 rounded-sm"></div>'
                          )
                          .join("")}
                      </div>
                      <p class="text-sm font-semibold text-purple-800 dark:text-purple-300">S/ 150</p>
                    </div>

                    <!-- Zona Preferencial -->
                    <div class="bg-blue-100 dark:bg-blue-900/30 border-2 border-blue-300 dark:border-blue-700 rounded-lg p-4 hover:shadow-lg transition-shadow cursor-pointer">
                      <div class="flex items-center justify-between mb-2">
                        <span class="font-bold text-blue-800 dark:text-blue-300">PREFERENCIAL</span>
                        <span class="text-xs text-blue-600 dark:text-blue-400">100 asientos</span>
                      </div>
                      <div class="grid grid-cols-5 gap-1 mb-2">
                        ${Array(15)
                          .fill(0)
                          .map(
                            () =>
                              '<div class="w-4 h-4 bg-blue-500 dark:bg-blue-600 rounded-sm"></div>'
                          )
                          .join("")}
                      </div>
                      <p class="text-sm font-semibold text-blue-800 dark:text-blue-300">S/ 80</p>
                    </div>

                    <!-- Zona General -->
                    <div class="bg-green-100 dark:bg-green-900/30 border-2 border-green-300 dark:border-green-700 rounded-lg p-4 hover:shadow-lg transition-shadow cursor-pointer">
                      <div class="flex items-center justify-between mb-2">
                        <span class="font-bold text-green-800 dark:text-green-300">GENERAL</span>
                        <span class="text-xs text-green-600 dark:text-green-400">200 asientos</span>
                      </div>
                      <div class="grid grid-cols-5 gap-1 mb-2">
                        ${Array(15)
                          .fill(0)
                          .map(
                            () =>
                              '<div class="w-4 h-4 bg-green-500 dark:bg-green-600 rounded-sm"></div>'
                          )
                          .join("")}
                      </div>
                      <p class="text-sm font-semibold text-green-800 dark:text-green-300">S/ 40</p>
                    </div>
                  </div>

                  <!-- Leyenda -->
                  <div class="flex items-center justify-center gap-6 pt-4 border-t border-gray-300 dark:border-gray-700">
                    <div class="flex items-center gap-2">
                      <div class="w-4 h-4 bg-gray-500 dark:bg-gray-600 rounded-sm"></div>
                      <span class="text-sm text-gray-600 dark:text-gray-400">Disponible</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="w-4 h-4 bg-red-500 dark:bg-red-600 rounded-sm"></div>
                      <span class="text-sm text-gray-600 dark:text-gray-400">Ocupado</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="w-4 h-4 bg-yellow-500 dark:bg-yellow-600 rounded-sm"></div>
                      <span class="text-sm text-gray-600 dark:text-gray-400">Seleccionado</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Sidebar de compra -->
            <div class="lg:col-span-1">
              <div class="sticky top-24">
                <div class="bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 shadow-lg">
                  <div class="mb-6">
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Precio desde</p>
                    <p class="text-4xl font-bold text-gray-900 dark:text-white">S/ 40</p>
                  </div>

                  <button 
                    onclick="alert('Funcionalidad de compra en desarrollo')"
                    class="w-full bg-green-600 dark:bg-green-500 text-white py-4 rounded-xl hover:bg-blue-700 dark:hover:bg-blue-600 font-bold text-lg mb-4 transition-colors shadow-lg hover:shadow-xl"
                  >
                    Comprar entradas
                  </button>

                  <div class="space-y-3 mb-6">
                    <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400">
                      <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span>Confirmaci贸n instant谩nea</span>
                    </div>
                    <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400">
                      <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span>Tickets digitales</span>
                    </div>
                    <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400">
                      <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span>Pago seguro</span>
                    </div>
                  </div>

                  <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 text-center">
                      Al comprar, aceptas nuestros t茅rminos y condiciones
                    </p>
                  </div>
                </div>

                <!-- Compartir -->
                <div class="mt-6 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6">
                  <h3 class="font-bold text-gray-900 dark:text-white mb-4">Compartir evento</h3>
                  <div class="flex gap-3">
                    <button class="flex-1 bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition-colors">
                      <svg class="w-5 h-5 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </button>
                    <button class="flex-1 bg-blue-400 text-white p-3 rounded-lg hover:bg-blue-500 transition-colors">
                      <svg class="w-5 h-5 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                    </button>
                    <button class="flex-1 bg-green-500 text-white p-3 rounded-lg hover:bg-green-600 transition-colors">
                      <svg class="w-5 h-5 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
